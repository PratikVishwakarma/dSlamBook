<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_my_self"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/splatter_background"
tools:context="major.com.dslambook.UI.otherProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/otherUser_imageView_profile_pic"
                android:padding="6dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:background="#fafafa"
                android:elevation="6dp"
                android:shadowColor="@color/black_overlay"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/otherUser_textView_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Username"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/otherUser_textView_username_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:background="#fafafa"
                android:elevation="6dp"
                android:shadowColor="@color/black_overlay"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Born On "
                        android:textStyle="bold"
                        android:textColor="#99000000"
                        android:textSize="17sp"
                        android:gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/otherUser_textView_dateOfBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:background="#fafafa"
                android:elevation="6dp"
                android:shadowColor="@color/black_overlay"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/otherUser_button_add_friend_request"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#fafafa"
                    android:text="Add Friend"
                    android:background="@drawable/bg_friend_request_add_accept_button_rounded_corner"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>

                <Button
                    android:id="@+id/otherUser_button_accept_friend_request"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#fafafa"
                    android:text="Accept Request"
                    android:background="@drawable/bg_friend_request_add_accept_button_rounded_corner"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>

                <Button
                    android:id="@+id/otherUser_button_cancel_friend_request"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#FF4A5CCC"
                    android:text="Cancel Request"
                    android:background="@drawable/bg_friend_request_delete_unfriend_cancel_button_rounded_corner"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>

                <Button
                    android:id="@+id/otherUser_button_unfriend"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#FF4A5CCC"
                    android:text="Unfriend"
                    android:background="@drawable/bg_friend_request_delete_unfriend_cancel_button_rounded_corner"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>

                <Button
                    android:id="@+id/otherUser_button_notNow"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#FF4A5CCC"
                    android:text="Not now"
                    android:background="@drawable/bg_friend_request_delete_unfriend_cancel_button_rounded_corner"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/otherUser_fab_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/com_facebook_button_send_icon_white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

