<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="major.com.dslambook.UI.userProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_userProfile_profile_pic"
                android:padding="6dp"
                android:layout_marginTop="12dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginTop="5dp"
                android:background="#fafafa"
                android:elevation="3dp"
                android:shadowColor="@color/black_overlay"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/textView_userProfile_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Username"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/otherUser_textView_username_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginTop="5dp"
                android:background="#fafafa"
                android:elevation="3dp"
                android:shadowColor="@color/black_overlay"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Born On "
                        android:textStyle="bold"
                        android:textColor="#99000000"
                        android:textSize="17sp"
                        android:gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/textView_userProfile_dateOfBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginTop="5dp"
                android:background="#fafafa"
                android:elevation="3dp"
                android:shadowColor="@color/black_overlay"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="extra Details any thing"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="5"
        android:background="#DCF4F5"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView_user_profile_user_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:background="@color/footer_active_background_color"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/dsb_ic_user_profile_icon"/>
        <ImageView
            android:id="@+id/imageView_user_profile_add_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/dsb_ic_story_icon"/>
        <ImageView
            android:id="@+id/imageView_user_profile_Home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/dsb_ic_home_icon"/>
        <ImageView
            android:id="@+id/imageView_user_profile_Search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/dsb_ic_search_user_icon"/>
        <ImageView
            android:id="@+id/imageView_user_profile_Friends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/dsb_ic_friends_icon"/>
    </LinearLayout>
</RelativeLayout>
