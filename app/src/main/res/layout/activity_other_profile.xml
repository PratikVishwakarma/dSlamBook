<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_my_self"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:scrollbars="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="@drawable/splatter_background"
tools:context="major.com.dslambook.UI.otherProfileActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/otherUser_imageView_profile_pic"
        android:padding="6dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="#fafafa"
        android:elevation="6dp"
        android:shadowColor="@color/black_overlay"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/otherUser_textView_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Username"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/otherUser_textView_username_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="#fafafa"
        android:elevation="6dp"
        android:shadowColor="@color/black_overlay"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Born On "
                android:textStyle="bold"
                android:textColor="#99000000"
                android:textSize="17sp"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/otherUser_textView_dateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:textStyle="italic"
                android:textSize="15sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        android:background="#fafafa"
        android:elevation="6dp"
        android:shadowColor="@color/black_overlay"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/otherUser_button_add_friend_request"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#fafafa"
            android:text="Add Friend"
            android:background="#8803A9F4"
            android:textSize="15sp"
            android:textStyle="normal"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>

        <Button
            android:id="@+id/otherUser_button_accept_friend_request"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#fafafa"
            android:text="Accept Request"
            android:background="#8803A9F4"
            android:textSize="15sp"
            android:textStyle="normal"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>

        <Button
            android:id="@+id/otherUser_button_cancel_friend_request"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#fafafa"
            android:text="Cancel Request"
            android:background="#8881D4FA"
            android:textSize="15sp"
            android:textStyle="normal"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>

        <Button
            android:id="@+id/otherUser_button_unfriend"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#fafafa"
            android:text="Unfriend"
            android:background="#D84315"
            android:textSize="15sp"
            android:textStyle="normal"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>
    </LinearLayout>

</LinearLayout>

</ScrollView>

